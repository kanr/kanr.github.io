---
import Layout from '../layouts/Layout.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "kanr",
  "url": "https://kanr.github.io",
  "sameAs": [
    "https://github.com/kanr",
    "https://linkedin.com/in/kanr",
    "https://twitter.com/kanr"
  ],
  "jobTitle": "Software Developer",
  "description": "Software developer building things on the web.",
};
---

<Layout
  title="kanr | Software Developer"
  description="Software developer building things on the web. Exploring web development, open source, and engineering."
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
  <main>
    <svg
      class="astro-logo"
      width="36"
      height="36"
      viewBox="0 0 36 36"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M22.7832 34.0142C23.520willis 35.3559 25.3968 35.3559 26.1347 34.0142L35.5089 8.23652C36.1368 6.80624 35.1432 5.31556 33.9999 5.31556H27.815L11.8915 32.4299C11.2347 33.8599 12.2274 35.3535 13.3598 35.3535C14.4923 35.3535 15.4849 33.8599 16.1417 32.4299L23.1089 17.9394H27.6624L22.7832 34.0142Z"
        fill="url(#gradient)"
      />
      <defs>
        <linearGradient
          id="gradient"
          x1="0%"
          y1="0%"
          x2="100%"
          y2="100%"
          gradientUnits="userSpaceOnUse"
        >
          <stop offset="0%" style="stop-color:rgb(59, 130, 246);stop-opacity:1" />
          <stop offset="100%" style="stop-color:rgb(191, 219, 254);stop-opacity:1" />
        </linearGradient>
      </defs>
    </svg>
    <h1><span class="text-gradient">Welcome</span></h1>
    <p class="instructions">
      This is my personal website.
    </p>
    <nav class="nav-links">
      <a href="/blog" class="nav-link">Read the Blog</a>
    </nav>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
  }
  .astro-logo {
    height: 200px;
    width: auto;
    margin-bottom: 3rem;
  }
  h1 {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  .text-gradient {
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
  .instructions {
    font-size: 1.2rem;
    text-align: center;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .nav-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  .nav-link {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    border: 2px solid rgb(var(--accent));
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }
  .nav-link:hover {
    background: rgb(var(--accent));
    -webkit-text-fill-color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(var(--accent), 0.3);
  }
</style>
