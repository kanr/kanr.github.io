---
import Layout from '../layouts/Layout.astro';

const skills = {
  languages: ['TypeScript', 'JavaScript', 'Python', 'HTML/CSS'],
  frameworks: ['Astro', 'React', 'Node.js', 'Next.js'],
  tools: ['Git', 'VS Code', 'Docker', 'GitHub Actions'],
  interests: ['Web Development', 'Open Source', 'Cloud Computing', 'DevOps'],
};

const experience = [
  {
    title: 'Software Developer',
    company: 'Tech Company',
    period: '2022 - Present',
    description: 'Building modern web applications and contributing to open source projects.',
  },
  {
    title: 'Junior Developer',
    company: 'Startup Inc',
    period: '2020 - 2022',
    description: 'Developed full-stack applications using React and Node.js.',
  },
];
---

<Layout title="About Me" description="Learn more about me, my skills, and experience">
  <main>
    <section class="hero">
      <div class="avatar">
        <img src="https://github.com/kanr.png" alt="Profile photo" />
      </div>
      <h1>About Me</h1>
      <p class="tagline">
        A passionate developer building things for the web.
      </p>
    </section>

    <section class="bio">
      <h2>üëã Hello!</h2>
      <p>
        I'm a software developer who loves creating elegant solutions to complex problems. 
        I enjoy working with modern web technologies and am always eager to learn new things.
      </p>
      <p>
        When I'm not coding, you can find me exploring new technologies, contributing to 
        open source projects, or writing about web development on my blog.
      </p>
    </section>

    <section class="skills">
      <h2>üõ†Ô∏è Skills & Technologies</h2>
      <div class="skills-grid">
        <div class="skill-category">
          <h3>Languages</h3>
          <ul>
            {skills.languages.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>
        <div class="skill-category">
          <h3>Frameworks</h3>
          <ul>
            {skills.frameworks.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>
        <div class="skill-category">
          <h3>Tools</h3>
          <ul>
            {skills.tools.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>
        <div class="skill-category">
          <h3>Interests</h3>
          <ul>
            {skills.interests.map((skill) => <li>{skill}</li>)}
          </ul>
        </div>
      </div>
    </section>

    <section class="experience">
      <h2>üíº Experience</h2>
      <div class="timeline">
        {experience.map((job) => (
          <div class="timeline-item">
            <div class="timeline-marker"></div>
            <div class="timeline-content">
              <h3>{job.title}</h3>
              <p class="company">{job.company}</p>
              <p class="period">{job.period}</p>
              <p class="description">{job.description}</p>
            </div>
          </div>
        ))}
      </div>
    </section>

    <section class="contact-cta">
      <h2>üì¨ Let's Connect</h2>
      <p>
        I'm always open to discussing new projects, creative ideas, or opportunities to be part of your visions.
      </p>
      <a href="/contact" class="btn">Get in Touch</a>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 3rem;
  }

  .avatar {
    width: 150px;
    height: 150px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    overflow: hidden;
    border: 4px solid rgb(var(--accent));
    box-shadow: 0 4px 20px rgba(var(--accent), 0.3);
  }

  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: rgb(var(--accent));
  }

  .tagline {
    font-size: 1.3rem;
    color: var(--text-secondary);
  }

  section {
    margin-bottom: 3rem;
  }

  h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent-dark));
  }

  .bio p {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-primary);
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1.5rem;
  }

  .skill-category {
    background: var(--bg-secondary);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-md);
  }

  .skill-category h3 {
    font-size: 1rem;
    color: rgb(var(--accent));
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .skill-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .skill-category li {
    padding: 0.4rem 0;
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .timeline {
    position: relative;
    padding-left: 2rem;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: rgb(var(--accent-light));
  }

  .timeline-item {
    position: relative;
    padding-bottom: 2rem;
  }

  .timeline-marker {
    position: absolute;
    left: -2rem;
    top: 0;
    width: 12px;
    height: 12px;
    background: rgb(var(--accent));
    border-radius: 50%;
    transform: translateX(-5px);
  }

  .timeline-content h3 {
    margin: 0 0 0.25rem;
    font-size: 1.2rem;
  }

  .company {
    color: rgb(var(--accent));
    font-weight: 500;
    margin: 0 0 0.25rem;
  }

  .period {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin: 0 0 0.5rem;
  }

  .description {
    color: var(--text-secondary);
    margin: 0;
  }

  .contact-cta {
    text-align: center;
    background: linear-gradient(135deg, rgba(var(--accent), 0.1), rgba(var(--accent-light), 0.2));
    padding: 3rem 2rem;
    border-radius: 16px;
  }

  .contact-cta h2 {
    margin-bottom: 0.5rem;
  }

  .contact-cta p {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-block;
    background: rgb(var(--accent));
    color: white;
    padding: 0.75rem 2rem;
    border-radius: 8px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s;
  }

  .btn:hover {
    background: rgb(var(--accent-dark));
    transform: translateY(-2px);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .skills-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
