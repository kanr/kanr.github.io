---
import Layout from '../layouts/Layout.astro';

// Enable on-demand rendering - freshness over static speed
export const prerender = false;

interface GitHubRepo {
  id: number;
  name: string;
  description: string | null;
  html_url: string;
  stargazers_count: number;
  language: string | null;
  topics: string[];
}

const username = 'kanr';

let repos: GitHubRepo[] = [];
let error: string | null = null;

try {
  // Fetch with cache headers - cache for 1 hour at edge
  const response = await fetch(`https://api.github.com/users/${username}/repos?sort=stars&per_page=100`, {
    headers: {
      'Accept': 'application/vnd.github.v3+json',
      // Add User-Agent to avoid GitHub rate limiting
      'User-Agent': 'Astro-Portfolio',
    },
  });
  
  if (!response.ok) {
    throw new Error(`GitHub API error: ${response.status}`);
  }
  
  repos = await response.json();
  
  // Set cache control header for edge caching
  // Cache for 1 hour (3600 seconds)
  const cacheHeader = 'public, max-age=3600, s-maxage=3600';
} catch (err) {
  error = err instanceof Error ? err.message : 'Failed to fetch repositories';
}
---

<Layout title="GitHub Repositories" description={`${username}'s public GitHub repositories`}>
  <main>
    <h1>GitHub Repositories</h1>
    <p class="subtitle">A collection of my public projects on GitHub</p>
    
    {error ? (
      <div class="error-message">
        <p>Unable to load repositories: {error}</p>
        <p>Please try again later.</p>
      </div>
    ) : repos.length === 0 ? (
      <div class="empty-message">
        <p>No repositories found.</p>
      </div>
    ) : (
      <div class="repos-grid">
        {repos.map((repo) => (
          <a href={repo.html_url} class="repo-card" target="_blank" rel="noopener noreferrer">
            <div class="repo-header">
              <h3>{repo.name}</h3>
              {repo.stargazers_count > 0 && (
                <div class="stars">
                  ‚≠ê {repo.stargazers_count}
                </div>
              )}
            </div>
            {repo.description && (
              <p class="description">{repo.description}</p>
            )}
            <div class="repo-footer">
              {repo.language && (
                <span class="language">{repo.language}</span>
              )}
              {repo.topics && repo.topics.length > 0 && (
                <div class="topics">
                  {repo.topics.slice(0, 3).map((topic) => (
                    <span class="topic">{topic}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
    )}
  </main>
</Layout>

<style>
  main {
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    text-align: center;
  }

  .subtitle {
    text-align: center;
    color: rgba(0, 0, 0, 0.6);
    font-size: 1.1rem;
    margin-bottom: 3rem;
  }

  .repos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .repo-card {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    transition: all 0.3s ease;
    text-decoration: none;
    color: inherit;
    background: white;
  }

  .repo-card:hover {
    border-color: rgb(var(--accent));
    box-shadow: 0 4px 12px rgba(var(--accent), 0.15);
    transform: translateY(-2px);
  }

  .repo-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 0.5rem;
  }

  .repo-header h3 {
    margin: 0;
    font-size: 1.3rem;
    flex: 1;
    word-break: break-word;
  }

  .stars {
    white-space: nowrap;
    font-size: 0.9rem;
    color: rgba(0, 0, 0, 0.6);
  }

  .description {
    margin: 0.75rem 0;
    color: rgba(0, 0, 0, 0.7);
    font-size: 0.95rem;
    flex-grow: 1;
  }

  .repo-footer {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.05);
  }

  .language {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: rgb(var(--accent-light));
    color: rgb(var(--accent-dark));
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .topics {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .topic {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    border-radius: 4px;
    font-size: 0.8rem;
  }

  .error-message {
    background: #fee;
    border: 1px solid #fcc;
    padding: 1.5rem;
    border-radius: 8px;
    text-align: center;
    color: #c33;
  }

  .empty-message {
    text-align: center;
    color: rgba(0, 0, 0, 0.6);
    padding: 2rem;
  }
</style>
