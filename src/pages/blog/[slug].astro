---
import BlogLayout from '../../layouts/BlogLayout.astro';
import type { MarkdownInstance } from 'astro';

interface Post {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author?: string;
    image?: string;
    tags?: string[];
  };
  default: any;
}

export async function getStaticPaths() {
  const posts = (await Astro.glob('../../posts/*.md')) as MarkdownInstance<Record<string, any>>[];
  
  return posts.map((post) => {
    const slug = (post.file as string).split('/').pop()?.replace('.md', '') || '';
    return {
      params: { slug },
      props: post,
    };
  });
}

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author?: string;
    image?: string;
    tags?: string[];
  };
  default: any;
}

const { frontmatter, default: Content } = Astro.props as Props;
---

<BlogLayout {...frontmatter}>
  <Content />
</BlogLayout>
