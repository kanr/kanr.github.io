---
import BlogLayout from '../../layouts/BlogLayout.astro';
import type { MarkdownInstance } from 'astro';

interface Post {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author?: string;
    image?: string;
    tags?: string[];
  };
  default: any;
  rawContent: () => string;
}

export async function getStaticPaths() {
  const posts = (await Astro.glob('../../posts/*.md')) as MarkdownInstance<Record<string, any>>[];
  
  return posts.map((post) => {
    const slug = (post.file as string).split('/').pop()?.replace('.md', '') || '';
    return {
      params: { slug },
      props: { ...post, slug },
    };
  });
}

interface Props {
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author?: string;
    image?: string;
    tags?: string[];
  };
  default: any;
  rawContent: () => string;
  slug: string;
}

const { frontmatter, default: Content, rawContent, slug } = Astro.props;
const raw = rawContent();
---

<BlogLayout {...frontmatter} rawContent={raw} slug={slug}>
  <Content />
</BlogLayout>
