---
import Layout from '../../layouts/Layout.astro';
import BlogSearch from '../../components/BlogSearch.svelte';
import type { MarkdownInstance } from 'astro';

interface Post {
  url: string;
  frontmatter: {
    title: string;
    description: string;
    pubDate: Date;
    author?: string;
    image?: string;
    tags?: string[];
  };
}

const posts = (await Astro.glob('../../posts/*.md')) as MarkdownInstance<Record<string, any>>[];

const sortedPosts = posts
  .map((post) => {
    const slug = (post.file as string).split('/').pop()?.replace('.md', '') || '';
    return {
      slug,
      url: `/blog/${slug}/`,
      frontmatter: post.frontmatter,
    };
  })
  .sort((a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime());
---

<Layout title="Blog" description="Read my latest blog posts">
  <main class="blog-main">
    <header class="blog-header">
      <h1>Blog</h1>
      <p class="intro">Thoughts, tutorials, and updates about web development and technology.</p>
      <a href="/rss.xml" class="rss-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
          <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
        </svg>
        RSS Feed
      </a>
    </header>

    <BlogSearch
      client:load
      posts={sortedPosts.map((p) => ({
        slug: p.slug,
        url: p.url,
        title: p.frontmatter.title,
        description: p.frontmatter.description,
        pubDate: String(p.frontmatter.pubDate),
        tags: p.frontmatter.tags ?? [],
      }))}
    />
  </main>
</Layout>

<style>
  .blog-main {
    max-width: 960px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .blog-header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .intro {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .rss-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(var(--accent));
    font-size: 0.95rem;
    text-decoration: none;
  }

  .rss-link:hover {
    text-decoration: underline;
  }

  .tags-section {
    margin-bottom: 2.5rem;
  }

  .tags-section h2 {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .post-card-link {
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s, box-shadow 0.2s;
  }

  .post-card-link:hover {
    transform: translateY(-4px);
  }

  .post-card-link :global(.card) {
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .post-description {
    flex-grow: 1;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border-color);
  }

  .post-date {
    font-size: 0.9rem;
    color: var(--text-secondary);
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    display: inline-block;
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 500;
  }

  .no-posts {
    text-align: center;
    color: var(--text-secondary);
    padding: 3rem 1rem;
    font-size: 1.1rem;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
