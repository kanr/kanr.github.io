---
import Layout from '../layouts/Layout.astro';

export interface Props {
  title: string;
  description: string;
  pubDate: Date | string;
  author?: string;
  image?: string;
  tags?: string[];
}

const { title, description, pubDate, author = 'Anonymous', image, tags = [] } = Astro.props;
const date = new Date(pubDate);
const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={title} description={description}>
  <article class="blog-post">
    <header class="post-header">
      {image && <img src={image} alt={title} class="post-image" />}
      <h1>{title}</h1>
      <div class="post-meta">
        <span class="author">By {author}</span>
        <span class="date">{formattedDate}</span>
      </div>
      {tags.length > 0 && (
        <div class="tags">
          {tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <main class="post-content">
      <slot />
    </main>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .post-header {
    margin-bottom: 3rem;
  }

  .post-image {
    width: 100%;
    height: auto;
    border-radius: 8px;
    margin-bottom: 2rem;
    object-fit: cover;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent));
  }

  .post-meta {
    display: flex;
    gap: 1rem;
    color: rgba(0, 0, 0, 0.6);
    font-size: 0.95rem;
    margin-bottom: 1rem;
  }

  .author::before {
    content: '‚úçÔ∏è ';
  }

  .date::before {
    content: 'üìÖ ';
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    display: inline-block;
    background: rgba(var(--accent), 0.1);
    color: rgb(var(--accent));
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
  }

  .post-content {
    line-height: 1.8;
    font-size: 1.05rem;
  }

  :global(.post-content h2) {
    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: rgb(var(--accent));
  }

  :global(.post-content h3) {
    font-size: 1.4rem;
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
  }

  :global(.post-content p) {
    margin-bottom: 1rem;
  }

  :global(.post-content code) {
    background: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
  }

  :global(.post-content pre) {
    background: rgba(0, 0, 0, 0.05);
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  :global(.post-content ul),
  :global(.post-content ol) {
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  :global(.post-content li) {
    margin-bottom: 0.5rem;
  }

  :global(.post-content blockquote) {
    border-left: 4px solid rgb(var(--accent));
    padding-left: 1rem;
    margin-left: 0;
    margin-bottom: 1rem;
    font-style: italic;
    color: rgba(0, 0, 0, 0.7);
  }
</style>
